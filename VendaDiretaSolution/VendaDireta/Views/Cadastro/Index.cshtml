@model VendaDireta.Models.Usuario


<h3>Cadastrar usuário</h3>

@using (Html.BeginForm("Index", "Cadastro", FormMethod.Post))
{
    <div class="form-group">
        <label>Nome</label>
        <div class="input-group">
            @Html.TextBoxFor(x => x.Nome, new { @class = "form-control", type = "text" })
        </div>
    </div>
    <div class="form-group">
        <label>E-mail</label>
        <div class="input-group">
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", type = "email", placeholder = "email@email.com" })
        </div>
    </div>
    <div class="form-group">
        <label>Senha</label>
        <div class="input-group">
            @Html.TextBoxFor(x => x.Senha, new { @class = "form-control", type = "password" })
        </div>
    </div>

    @Html.ValidationMessage("erro", new { @class = "text-danger" })
    @Html.ValidationMessage("usuario", new { @class = "text-danger" })

    <div class="form-group">
        <button class="btn btn-primary submit-btn">Cadastrar</button>
    </div>
    <div class="form-group">
        <a href="@Url.Action("Index","Login")" class="btn btn-link">Voltar para o login</a>
    </div>
}

