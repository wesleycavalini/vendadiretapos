@model VendaDireta.Models.Produto


<h3>Cadastrar produto</h3>

@using (Html.BeginForm("Cadastrar", "Home", FormMethod.Post))
{
    <div class="form-group">
        <label>Nome</label>
        <div class="input-group">
            @Html.TextBoxFor(x => x.Nome, new { @class = "form-control", type = "text" })
        </div>
    </div>
    <div class="form-group">
        <label>Preço</label>
        <div class="input-group">
            @Html.TextBoxFor(x => x.Preco, new { @class = "form-control", type = "number" })
        </div>
    </div>
    @Html.ValidationMessage("erro", new { @class = "text-danger" })
    @Html.ValidationMessage("produto", new { @class = "text-danger" })

    <div class="form-group">
        <button class="btn btn-primary submit-btn">Cadastrar</button>
    </div>
    <div class="form-group">
        <a href="@Url.Action("Index","Home")" class="btn btn-link">Voltar para listagem</a>
    </div>
}

